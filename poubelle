    /*MOUSE MOVE*/
mlx_hook(vars.win, 6, 0, test, &vars);

int test (int x, int y, void *param)
{
    (void) x;
    (void) y;
    (void) param;

    printf("la souris bouge : %d %d\n", x, y);
    return (0);
}

